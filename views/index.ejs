<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Definition Search | Find a Definition - Dictionaryyy</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="d-flex flex-column min-vh-100">
    <header class="bg-primary text-white text-center py-3 mb-4">
      <p class="h2 mb-0">Dictionaryyy</p>
      <nav>
        <ul class="nav justify-content-center py-2 mb-0">
          <li class="nav-item">
            <a class="nav-link text-white" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/glossary">Glossary</a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="container">
      <div class="bg-white shadow rounded p-3 mb-4">
        <h2 class="text-center text-muted">Search for a Definition</h2>
        <form method="POST" class="input-group my-3">
          <input
            type="text"
            name="word"
            class="form-control"
            placeholder="Enter a word"
          />
          <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <!-- Recent Searches and Most Popular Searches -->
        <div class="row">
          <!-- Recent Searches -->
          <div class="col-md-6">
            <div class="card my-3">
              <div class="card-header">
                <h5 class="card-title">Recent Searches</h5>
              </div>
              <div class="card-body">
                <% if (recentSearches.length > 0) { %>
                <ul class="list-unstyled">
                  <% recentSearches.forEach(function(search) { %>
                  <li>
                    <a href="/term/<%= search %>"
                      ><%= search.charAt(0).toUpperCase() + search.slice(1)
                      %></a
                    >
                  </li>
                  <% }); %>
                </ul>
                <% } else { %>
                <p>No recent searches found.</p>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Most Popular Searches -->
          <div class="col-md-6">
            <div class="card my-3">
              <div class="card-header">
                <h5 class="card-title">Most Popular Searches</h5>
              </div>
              <div class="card-body">
                <% if (popularSearches.length > 0) { %>
                <ul class="list-unstyled">
                  <% popularSearches.forEach(function(search) { %> <% const
                  searchCount = searchCounts[search] || 0; %>
                  <li>
                    <a href="/term/<%= search %>">
                      <%= search.charAt(0).toUpperCase() + search.slice(1) %>
                    </a>
                    <span class="badge bg-secondary ms-2"
                      ><%= searchCount %></span
                    >
                  </li>
                  <% }); %>
                </ul>
                <% } else { %>
                <p>No popular searches found.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <% if (typeof definitions !== 'undefined' && definitions.length > 0) {
        %> <% definitions.forEach(function(def) { %>
        <div class="card my-3">
          <div class="card-header">
            <h5 class="card-title"><%= def.title %></h5>
          </div>
          <div class="card-body">
            <p class="card-text"><%= def.description %></p>
          </div>
        </div>
        <% }); %> <% } %>

        <div id="result"></div>
      </div>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>
